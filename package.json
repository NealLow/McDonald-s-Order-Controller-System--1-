{
  "name": "mcdonalds-order-controller",
  "version": "1.0.0",
  "description": "McDonald's Order Controller with Angular and ng-zorro",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "prerender": "ng run mcdonalds-order-controller:prerender",
    "prerender:prod": "ng run mcdonalds-order-controller:prerender:production",
    "watch": "ng build --watch --configuration development",
    "serve": "ng serve --open",
    "serve:ssr": "node dist/mcdonalds-order-controller/server/main.js",
    "dev:ssr": "ng run mcdonalds-order-controller:serve-ssr",
    "build:ssr": "ng build && ng run mcdonalds-order-controller:server"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/platform-server": "^18.0.0",
    "@angular/ssr": "^18.2.20",
    "@ant-design/icons-angular": "^18.0.0",
    "@ctrl/tinycolor": "^4.1.0",
    "express": "^4.18.2",
    "ng-zorro-antd": "^18.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular/cli": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.18.0",
    "browser-sync": "^3.0.0",
    "typescript": "~5.4.2"
  }
}